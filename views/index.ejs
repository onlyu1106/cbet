        d2.style.background = "url('../img/dice.png') no-repeat " + dice[dice2];
        d3.style.background = "url('../img/dice.png') no-repeat " + dice[dice3];
        d1.style.opacity = 1;
        d2.style.opacity = 1;
        d3.style.opacity = 1;
    }
    showDice = function(D1, D2, D3) {
        dice = {
            1: '0 -2px',
            2: '-103px -3px',
            3: '-204px -3px',
            4: '-305px -3px',
