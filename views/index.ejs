                }
            }

        }
        var sessionIdCheck = 0;
        var totalDiceCheck = 0;
        var startIndex = data.length - 20;
        if (data.length >= 50) {
            startIndex = data.length - 20;
        } else {
            startIndex = 0;
        }
        for (let i = startIndex; i < data.length; i++) {
            sessionIdCheck = parseInt(data[i].Id);
            totalDiceCheck = parseInt(data[i].totalDice);
            for (let index = 0; index < listDiceScan.length; index++) {
                console.log(index);
                if (listDiceScan[index].length > 0) {
                    console.log("lenght : " + listDiceScan[index].length + " index : " + index);
                    for (let j = 0; j < listDiceScan[index].length; j++) {
                        if (sessionIdCheck == listDiceScan[index][j].Id) {
                            if (totalDiceCheck > 10 && parseInt(listDiceScan[index][j].Total) > 10) {
                                listDiceScan[index][j].ClassIsTX = "table-primary";
                                break;
                            } else if (totalDiceCheck <= 10 && parseInt(listDiceScan[index][j].Total) <= 10) {
                                listDiceScan[index][j].ClassIsTX = "table-primary";
                                break;
                            } else {
                                listDiceScan[index][j].ClassIsTX = "table-danger";
                                break;
                            }
                        }
                    }
                }
            }

            createList(listDiceScan[0], "listDiceScan");
            createList(listDiceScan[1], "listDiceScan1");
            createList(listDiceScan[2], "listDiceScan2");
            createList(listDiceScan[3], "listDiceScan3");
            createList(listDiceScan[4], "listDiceScan4");
            createList(listDiceScan[5], "listDiceScan5");
            createList(listDiceScan[6], "listDiceScan6");
        }

        $("#listDice").append('</tbody>');
        $("#listDice").append('</table>');
    });
    $(document).ready(function() {
        $("#getListDice").click(function() {
            socket.emit("getListDice");
        });
        $("#scanDice").click(function() {
            scanDice(listDiceScan[0], "listDiceScan");
        });
        $("#scanDice1").click(function() {
            scanDice(listDiceScan[1], "listDiceScan1");
        });
        $("#scanDice2").click(function() {
            scanDice(listDiceScan[2], "listDiceScan2");
        });
        $("#scanDiceAll").click(function() {
            // $('#seedByTime').prop('checked', true);
            // scanDice(listScan1, "listDiceScan");
            // $('#seedById').prop('checked', true);
            // scanDice(listScan2, "listDiceScan1");
            $('#seedByText').prop('checked', true);
            $('#seed').val("0");
            scanDice(listDiceScan[0], "listDiceScan");
            $('#seed').val("1");
            scanDice(listDiceScan[1], "listDiceScan1");
            $('#seed').val("2");
            scanDice(listDiceScan[2], "listDiceScan2");
            $('#seed').val("3");
            scanDice(listDiceScan[3], "listDiceScan3");
            $('#seed').val("4");
            scanDice(listDiceScan[4], "listDiceScan4");
            $('#seed').val("5");
            scanDice(listDiceScan[5], "listDiceScan5");
            $('#seed').val("6");
            scanDice(listDiceScan[6], "listDiceScan6");
        });
    });
    countDown = function(data) {
        var MemberX = Math.floor(data._MemberX);
        var MemberT = Math.floor(data._MemberT);
        var countDown = Math.floor(data._countDown);
        if (countDown == 0) {
            $("#countDown").html(countDown);
            $("#countDownTable").html(Math.floor(data._countDown));
            $("#MemberX").removeAttr("style");
            $("#MemberT").removeAttr("style");
            countMemberIncrease = Math.floor((MemberX + MemberT) * 0.05);
            return;
        }
        $("#countDown").html(countDown);
        $("#MemberT").html(MemberT);
        $("#MemberX").html(MemberX);
        $("#TotalT").html(Math.floor(data._TotalT).toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"));
        $("#TotalX").html(Math.floor(data._TotalX).toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"));
        $("#countDownTable").html(Math.floor(data._countDown));
        if (MemberT - oldMemberT >= countMemberIncrease) {
            $("#MemberT").css("background", "#e85b38");
            $("#MemberX").removeAttr("style");
        } else if (MemberX - oldMemberX >= countMemberIncrease) {
            $("#MemberX").css("background", "#e85b38");
            $("#MemberT").removeAttr("style");
        }
        oldMemberT = MemberX;
        oldMemberT = MemberT;
    }
